<h2 class="text-center" style="color:rgb(46, 98, 10);">Listado productos</h2>
<% if(productos.length > 0)
{ %><div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
        <% for (const producto of productos){%>
            <tr>
                <td><%=producto.nombre%></td>
                <td><%=producto.precio%></td>
                <td>
                    <img class = "img" src="<%=producto.imagen%>">
                </td>
                
            </tr>
            <%};%>
        </table>
    </div>
    <% } else{ %>
        <h3 class="alert alert-danger">No hay productos</h1>
    <% } %>